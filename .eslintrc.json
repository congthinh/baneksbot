{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["standard"],
  "parser": "eslint-plugin-typescript/parser",
  "plugins": [
    "typescript",
    "mocha"
  ],
  "parserOptions": {
    "ecmaVersion": 2016
  },
  "rules": {
    "semi": [
      "off"
    ],
    "no-console": [
      "off"
    ],
    "mocha/no-exclusive-tests": [
      "error"
    ],
    "camelcase": ["off"],
    "no-unused-vars": "off",
    "typescript/no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }]
  }
}
